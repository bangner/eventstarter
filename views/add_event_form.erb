<h1>Create a new Event</h1>

<form id="new-event-form" action="/add_event" method="post">

	<label for="event_name">Event Name</label>
	<input name="event_name" type="text" placeholder="Describe your event in a short title ... " />

	<label for="creator_name">Creator Name: (Your full name)</label>
	<input name="creator_name" type="text" placeholder="Type your name" />

	<label for="creator_email">Creator Email:</label>
	<input name="creator_email" type="text" placeholder="e.g. alice@example.com" />

	<label for="event_time">Event Time:</label>
	<input name="event_time" type="text" placeholder="(e.g. 10am August 24, 2013)" />

	<label for="location">Location:</label>
	<input name="location" type="text" placeholder="(e.g. 716 Congress Ave, Austin, TX 78712)" />

	<label for="attendees">Attendees:</label>
	<textarea name="attendees" placeholder="Please comma seperate. (e.g. bill@example.org, alice@example.com, greg@something.org, ...)"></textarea>

	<label for="minimum-attendees">Minimum number of attendees:</label>
	<input type="number" name="min-number-attendees" value="1" /> 

	<label for="minimum-attendees">Maximum number of attendees:</label>
	<input type="number" name="max-number-attendees" value="10" /> 

	<label for="deadline">When is the deadline:</label>
	<input name="event_time" type="text" placeholder="(e.g. 10am August 24, 2013)" />

	<input type="submit" class="large success button" value="SEND" />
</form>
