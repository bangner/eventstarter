<h3>Event Details</h3>
<div class="grey-box">
	<strong>Creator:</strong> <%= @creator_name %>
	<br/>
	<strong>Event Name:</strong> <%= @event_name %>
	<br/>
	<% if @event_description.strip.length > 0 %>
		<strong>Event Description:</strong> <%= @event_description %>
		<br />
	<% end %>
	<strong>Event Time:</strong> <%= @event_time %>
	<br/>
	<strong>Deadline:</strong> <%= @deadline %>
	<br/>
	<strong>Event Location:</strong> <%= @event_location %>
	<br/>
	<strong>Minimum Attendees:</strong> <%= @minimum_attendees %>
	<br/>
	<% if @maximum_attendees.length > 0 %>
		<strong>Maximum Attendees:</strong> <%= @maximum_attendees %>
		<br/>
	<% end %>
	<strong>Invitees:</strong> <%= @invitees %>
	
</div>
